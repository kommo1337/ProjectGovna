<Page x:Class="ProjectKukushkin.PageFolder.AdminPageFolder.AddUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectKukushkin.PageFolder.AdminPageFolder"
      mc:Ignorable="d" 
      Title="Добавления пользователя" Height="550" Width="400"
        MinHeight="550" MinWidth="400"
        MaxHeight="550" MaxWidth="400" 
        Loaded="Page_Loaded">
    <Border BorderBrush="{x:Null}" BorderThickness="1" CornerRadius="20"
                  Background="{StaticResource DarkGrey}">
        <Border.Effect>
            <DropShadowEffect BlurRadius="35" Direction="-90"
                              RenderingBias="Quality" ShadowDepth="4"/>
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="70"/>
                <RowDefinition/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <Image x:Name="LogoIm" Grid.Row="1"
               Grid.Column="1" 
               Margin="10"
               Source="/ResourceFolder/ImageFolder/AuthLogo.png"/>
            <Label Style="{DynamicResource LabelLogo}"
               Grid.Column="2" Grid.Row="1">
                <TextBlock Text="Добавление пользователя"
                       TextWrapping="Wrap"/>
            </Label>
            <Label Style="{DynamicResource NormalLabel}" 
               Content="Логин" Grid.Column="1" Grid.Row="3"/>
            <TextBox x:Name="LoginTb" Grid.Row="3" Grid.Column="2"/>
            <Label Style="{DynamicResource NormalLabel}" 
               Content="Пароль" Grid.Column="1" Grid.Row="5"/>
            <TextBox x:Name="PasswordTb" 
                 Grid.Row="5" Grid.Column="2"/>
            <Label Style="{DynamicResource NormalLabel}" 
               Content="Роль" Grid.Column="1" Grid.Row="7"/>
            <ComboBox x:Name="RoleCb" 
                  Grid.Column="2" Grid.Row="7"
                  />
            <Button x:Name="AddBtn" Content="Добавить пользователя" 
                Grid.Column="1" Grid.Row="9"
                Grid.ColumnSpan="2"
                Click="AddBtn_Click"/>
            <Button x:Name="BackBtn" Content="Назад" 
                Grid.Column="1" Grid.Row="10"
                    Grid.ColumnSpan="2"
                Margin="10,20"
                Click="BackBtn_Click"/>
        </Grid>
    </Border>
</Page>
